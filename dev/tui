#!/bin/bash
# Opens the Lumenmon WebTUI dashboard in the default browser.
# Opens http://localhost:8080 showing agent status and metrics.
echo "Opening WebTUI at http://localhost:8080"
if command -v xdg-open > /dev/null; then
    xdg-open http://localhost:8080
elif command -v open > /dev/null; then
    open http://localhost:8080
else
    echo "Web interface available at: http://localhost:8080"
    echo "Please open the URL manually in your browser"
fi