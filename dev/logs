#!/bin/bash
# Streams live logs from console or agent container for debugging.
# Usage: ./logs [console|agent] - follows container logs in real-time.

case "${1:-console}" in
    console)
        docker logs -f lumenmon-console
        ;;
    agent)
        docker logs -f lumenmon-agent
        ;;
    *)
        echo "Usage: ./logs [console|agent]"
        exit 1
        ;;
esac