#!/bin/bash
# Stops console and/or agent containers without removing data or configuration.
# Usage: ./stop [console|agent|all] - gracefully stops specified containers.

case "${1:-all}" in
    console)
        docker stop lumenmon-console 2>/dev/null || true
        ;;
    agent)
        docker stop lumenmon-agent 2>/dev/null || true
        ;;
    all|"")
        docker stop lumenmon-console lumenmon-agent 2>/dev/null || true
        ;;
    *)
        echo "Usage: ./stop [console|agent|all]"
        exit 1
        ;;
esac